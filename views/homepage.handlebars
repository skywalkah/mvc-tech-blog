<div class="container">
  <h1>All Posts</h1>
  {{#each blogPosts}}
    <div class="card">
      <div class="card-body">
        <h2><a href="/blogposts/post/{{this.id}}">{{this.title}}</a></h2>
        <p class="card-text">Posted by {{this.user.username}} on {{formatDate this.date_created}} </p>
        <p class="card-text">{{this.contents}}</p>
      </div>
    </div>
  {{/each}}
</div>